<?xml version="1.0" encoding="utf-8"?>   
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<HorizontalScrollView
        android:id="@+id/irow"
        android:layout_toRightOf="@+id/left_toolbar"
        android:layout_width="match_parent"
        android:layout_height="20dp" >
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    >
		    <TextView
            android:id="@+id/iuserName"
            android:layout_width="wrap_content"
            android:paddingTop="3dp"
            android:paddingLeft="15dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white_color"/>
            <ImageView
            android:id="@+id/istarButton_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingLeft="10dp" />
            <ImageView
            android:id="@+id/istarButton_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="2" />
            <ImageView
            android:id="@+id/istarButton_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="left"
            android:layout_weight="2" />
            <ImageView
            android:id="@+id/istarButton_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="2" />
            <ImageView
            android:id="@+id/istarButton_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:layout_gravity="left"
            android:layout_weight="2" />
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
            android:id="@+id/icomment"
            android:layout_below="@+id/irow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/white_color"/>
     <ImageView
            android:id="@+id/white_line_thin"
            android:layout_below="@+id/icomment"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="15dp"
            android:src="@drawable/white_line_thin" />
</RelativeLayout>